<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.MainFragment">

    <TextView
        android:id="@+id/dTwoMyanmar"
        android:layout_width="match_parent"
        android:layout_height="97dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_alignParentTop="true"
        android:padding="20dp"
        android:textSize="30sp"
        android:textColor="#D40202"
        android:background="#E2A4FF"
        android:text="@string/d_myanmar"
        />

    <ImageView
        android:id="@+id/profile"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:padding="20dp"
        android:layout_alignParentTop="true"
        android:src="@drawable/ic_login"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/inteGer"
        android:text="95"
        android:layout_width="198dp"
        android:layout_height="236dp"
        android:textSize="150sp"
        app:layout_constraintTop_toBottomOf="@+id/dTwoMyanmar"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <androidx.cardview.widget.CardView
        android:id="@+id/cardOne"
        android:layout_width="355dp"
        android:layout_height="154dp"
        app:layout_constraintTop_toBottomOf="@+id/inteGer"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:cardBackgroundColor="#FF0505"
        />
    <androidx.cardview.widget.CardView
        android:id="@+id/cardTwo"
        android:layout_width="355dp"
        android:layout_height="154dp"
        app:layout_constraintTop_toBottomOf="@+id/cardOne"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:cardBackgroundColor="#FF0505"/>

    <com.google.android.gms.ads.AdView
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/adView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        ads:layout_constraintBottom_toBottomOf="parent"
        ads:adSize="BANNER"
        ads:adUnitId="ca-app-pub-7463383042493660/1250035787">
    </com.google.android.gms.ads.AdView>

</androidx.constraintlayout.widget.ConstraintLayout>
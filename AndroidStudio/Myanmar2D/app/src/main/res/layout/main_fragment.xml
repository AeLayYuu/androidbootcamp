<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.MainFragment"
    android:background="@color/background">


    <TextView
        android:id="@+id/inteGer"
        android:text="95"
        android:drawableTint="@color/colorPrimaryDark"
        android:shadowColor="@color/colorPrimaryDark"
        android:textColorHighlight="@color/colorPrimaryDark"
        android:gravity="center"
        android:textColor="#0DB413"
        android:layout_width="198dp"
        android:layout_height="wrap_content"
        android:textSize="120sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/cardOne"/>
    <androidx.cardview.widget.CardView
        android:id="@+id/cardOne"
        android:layout_width="320dp"
        android:layout_height="120dp"
        app:layout_constraintTop_toBottomOf="@+id/inteGer"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:cardBackgroundColor="#3784D0"
        android:elevation="30dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SET"
            android:textColor="#ffffff"
            android:textSize="15sp"
            android:fontFamily="serif"
            android:layout_marginTop="70dp"
            android:layout_marginLeft="30dp"/>
        <TextView
            android:id="@+id/textApiSetAM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SET"
            android:textColor="#ffffff"
            android:textSize="15sp"
            android:fontFamily="serif"
            android:layout_marginTop="90dp"
            android:layout_marginLeft="30dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Value"
            android:textColor="#ffffff"
            android:textSize="15sp"
            android:fontFamily="serif"
            android:layout_marginTop="70dp"
            android:layout_marginLeft="135dp"/>
        <TextView
            android:id="@+id/textApiValueAM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Value"
            android:textColor="#ffffff"
            android:textSize="15sp"
            android:fontFamily="serif"
            android:layout_marginTop="90dp"
            android:layout_marginLeft="135dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Result"
            android:textColor="#ffffff"
            android:textSize="15sp"
            android:fontFamily="serif"
            android:layout_marginTop="70dp"
            android:layout_marginLeft="250dp"/>
        <TextView
            android:id="@+id/textApiResultAM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Result"
            android:textColor="#ffffff"
            android:textSize="15sp"
            android:fontFamily="serif"
            android:layout_marginTop="90dp"
            android:layout_marginLeft="250dp"/>





    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/cardTwo"
        android:layout_width="320dp"
        android:layout_height="120dp"
        app:layout_constraintTop_toBottomOf="@+id/cardOne"
        android:layout_marginTop="25dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:cardBackgroundColor="#3784D0"
        android:padding="20dp"
        android:elevation="30dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SET"
            android:textColor="#ffffff"
            android:textSize="15sp"
            android:fontFamily="serif"
            android:layout_marginTop="70dp"
            android:layout_marginLeft="30dp"/>
        <TextView
            android:id="@+id/textApiSetPM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SET"
            android:textColor="#ffffff"
            android:textSize="15sp"
            android:fontFamily="serif"
            android:layout_marginTop="90dp"
            android:layout_marginLeft="30dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Value"
            android:textColor="#ffffff"
            android:textSize="15sp"
            android:fontFamily="serif"
            android:layout_marginTop="70dp"
            android:layout_marginLeft="135dp"/>
        <TextView
            android:id="@+id/textApiValuePM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Value"
            android:textColor="#ffffff"
            android:textSize="15sp"
            android:fontFamily="serif"
            android:layout_marginTop="90dp"
            android:layout_marginLeft="135dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Result"
            android:textColor="#ffffff"
            android:textSize="15sp"
            android:fontFamily="serif"
            android:layout_marginTop="70dp"
            android:layout_marginLeft="250dp"/>
        <TextView
            android:id="@+id/textApiResultPM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Result"
            android:textColor="#ffffff"
            android:textSize="15sp"
            android:fontFamily="serif"
            android:layout_marginTop="90dp"
            android:layout_marginLeft="250dp"/>


    </androidx.cardview.widget.CardView>
    <TextView
        android:id="@+id/textViewVot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Top Voting"
        android:textColor="#ffffff"
        app:layout_constraintTop_toBottomOf="@+id/cardTwo"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="25sp"
        android:background="#CC00FF"
        />

    <TextView
        android:id="@+id/randomNumberOne"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="H"
        android:textColor="#4B2DBF"
        android:textSize="30sp"
        app:layout_constraintTop_toBottomOf="@+id/textViewVot"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/randomNumberTwo"
        android:layout_marginTop="20dp"
        android:gravity="center"/>
    <TextView
        android:id="@+id/randomNumberTwo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="H"
        android:textColor="#4B2DBF"
        android:textSize="30sp"
        app:layout_constraintTop_toBottomOf="@+id/textViewVot"
        app:layout_constraintLeft_toRightOf="@+id/randomNumberOne"
        app:layout_constraintRight_toLeftOf="@+id/randomNumberThree"
        android:layout_marginTop="20dp"
        android:gravity="center"/>
    <TextView
        android:id="@+id/randomNumberThree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="H"
        android:textColor="#4B2DBF"
        android:textSize="30sp"
        app:layout_constraintTop_toBottomOf="@+id/textViewVot"
        app:layout_constraintLeft_toRightOf="@+id/randomNumberTwo"
        app:layout_constraintRight_toLeftOf="@+id/randomNumberFour"
        android:layout_marginTop="20dp"
        android:gravity="center"/>
    <TextView
        android:id="@+id/randomNumberFour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="H"
        android:textColor="#4B2DBF"
        android:textSize="30sp"
        app:layout_constraintTop_toBottomOf="@+id/textViewVot"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/randomNumberThree"
        android:layout_marginTop="20dp"
        android:gravity="center"/>



    <com.google.android.gms.ads.AdView
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/adView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        ads:layout_constraintBottom_toBottomOf="parent"
        ads:adSize="BANNER"
        ads:adUnitId="ca-app-pub-7463383042493660/1250035787">
    </com.google.android.gms.ads.AdView>

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="20dp"
    android:layout_margin="10dp"
    android:background="@drawable/download"
    tools:context=".AddProductActivity"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <EditText
        android:id="@+id/EditTxtProductID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Product ID"
        android:layout_marginTop="100dp"
        app:layout_constraintTop_toTopOf="parent"/>

    <EditText
        android:id="@+id/EditTxtProductName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Product Name"
        app:layout_constraintTop_toBottomOf="@+id/EditTxtProductID"/>

    <EditText
        android:id="@+id/EditTxtProductPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Product Price"
        app:layout_constraintTop_toBottomOf="@+id/EditTxtProductName"/>

    <EditText
        android:id="@+id/EditTxtProductQuentity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Product Quentity"
        app:layout_constraintTop_toBottomOf="@+id/EditTxtProductPrice"/>

    <Button
        android:id="@+id/BtnSave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        android:textColor="#ffffff"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="50dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/EditTxtProductQuentity"/>
</androidx.constraintlayout.widget.ConstraintLayout>